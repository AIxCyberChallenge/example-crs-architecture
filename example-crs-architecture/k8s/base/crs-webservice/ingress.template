---
kind: Ingress
apiVersion: networking.k8s.io/v1
metadata:
  name: crs-webapp
  annotations:
    cert-manager.io/cluster-issuer: letsencrypt-prod
    nginx.ingress.kubernetes.io/proxy-body-size: "5m"
spec:
  ingressClassName: nginx
  tls:
    - hosts:
        - ${AZ_DNS_A_RECORD}.${AZ_DNS_ZONE_NAME}
      secretName: api-dev-tls
  rules:
    - host: ${AZ_DNS_A_RECORD}.${AZ_DNS_ZONE_NAME}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: crs-webapp
                port:
                  number: 80
